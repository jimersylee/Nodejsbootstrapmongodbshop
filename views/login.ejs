	<hr class="divider"></div>
	<div class="container" id="summary-container">
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				
					<form class="main form-horizontal"  method="post" action="/login";">
						<fieldset>
							<legend>用户登录</legend>
							<div class="control-group">
								<label class="control-label">
									用户名</label>
								<div class="controls">
									<input name="name" type="text" placeholder="必填项" class="input-xlarge" required>
								</div>
							</div>
							<div class="control-group">
								<label class="control-label">
									密码</label>
								<div class="controls">
									<input id="pwd" name="password" type="password" placeholder="必填项" class="input-xlarge" required onchange="checkPasswords()">
								</div>
							</div>
							

							<div class="control-group">
								<label class="control-label">
								</label>
								<div class="controls">
									<button class="btn" type="submit" id="ok">
										登录</button>
									
								</div>
							</div>
						</fieldset>
					</form>
				
			</div>

			<div class="col-md-4"></div>
		</div>
	</div>
	<%- include footer %>